<Defs>
	<ThingDef ParentName="BaseDungeonArtillery">
		<defName>Trebuchet</defName>
		<label>Trebuchet</label>
		<description>A trebuchet is a battle machine used in the middle ages to throw heavy payloads at enemies. Though costly and difficult to build, a direct hit by a trebuchet is devastating.</description>
		<size>(3,3)</size>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Trebuchet/TrebuchetBase</texPath>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<rect>(0.38,0.2,0.56375,0.8)</rect>
				<cornerTL>Damage/Corner</cornerTL>
			</damageData>
			<shadowData>
				<offset>(-0.13,-0.87,-0.1)</offset>
				<volume>(0.5,0.4,1.05)</volume>
			</shadowData>
		</graphicData>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>150</costStuffCount>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-2)</interactionCellOffset>
		<costList>
			<WoodLog>300</WoodLog>
		</costList>
		<modExtensions>
			<li Class="Rimdungeon.Turrets.Dungeon_Turret_Def">
			</li>
		</modExtensions>
		<building>
			<turretGunDef>Trebuchet_Gun</turretGunDef>
			<turretBurstWarmupTime>0</turretBurstWarmupTime>
			<turretBurstCooldownTime>28.0</turretBurstCooldownTime>
			<buildingTags>
				<li>Artillery_BaseDestroyer</li>
				<li>Artillery_MannedMortar</li>
			</buildingTags>
		</building>
		<uiIconPath>Things/Building/Trebuchet/TrebuchetTop</uiIconPath>
		<uiIconScale>0.9</uiIconScale>
	</ThingDef>
	
	<ThingDef ParentName="BaseArtilleryWeapon">
		<defName>Trebuchet_Gun</defName>
		<label>trebuchet</label>
		<description>Mortar launcher. Lobs bombs over walls. Very inaccurate but long-ranged.</description>
		<graphicData>
			<texPath>Things/Building/Trebuchet/TrebuchetTop</texPath>
		</graphicData>
		<weaponTags>
			<li>Artillery_BaseDestroyer</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<defaultProjectile>Trebuchet_Projectile_Single</defaultProjectile>
				<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
				<forcedMissRadius>5</forcedMissRadius>
				<requireLineOfSight>false</requireLineOfSight>
				<minRange>15.9</minRange>
				<warmupTime>0</warmupTime>
				<range>500</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>Catapult_Release</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_ChangeableProjectile"/>
		</comps>
		<building>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
	</ThingDef>
	
	<ThingDef ParentName="BaseBullet">
		<defName>Trebuchet_Projectile_Single</defName>
		<label>trebuchet projectile single</label>
		<graphicData>
			<texPath>Things/Projectile/Stone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<damageDef>Stone</damageDef>
			<damageAmountBase>100</damageAmountBase>
			<explosionRadius>3</explosionRadius>
			<armorPenetrationBase>0.5</armorPenetrationBase>
			<stoppingPower>5</stoppingPower>
			<speed>75</speed>
		</projectile>
	</ThingDef>
</Defs>