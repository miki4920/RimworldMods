<Defs>
	<ThingDef ParentName="BaseTurret">
		<defName>Catapult_Turret</defName>
		<label>catapult turret</label>
		<description>A Catapult. Throws chunks of stone over huge distances. Innacurate and take time to reload but deadly.</description>
		<size>(2,2)</size>
		<graphicData>
			<texPath>Things/Building/Catapult/CatapultBase</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
			<shadowData>
				<volume>(0.27,0.25,0.27)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<uiIconPath>Things/Building/Catapult/CatapultTop</uiIconPath>
		<uiIconScale>0.90</uiIconScale>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1</Flammability>
			<WorkToBuild>1800</WorkToBuild>
			<Mass>8</Mass>
			<Beauty>-20</Beauty>
			<ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
		</statBases>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>0.4</fillPercent>
		<costList>
			<WoodLog>130</WoodLog>
			<Steel>40</Steel>
		</costList>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<modExtensions>
			<li Class="Rimdungeon.Turrets.Dungeon_Turret_Def">
				<secondaryGun>Catapult_Multi</secondaryGun>
			</li>
		</modExtensions>
		<building>
			<combatPower>45</combatPower>
			<!-- same as a scavenger -->
			<ai_combatDangerous>true</ai_combatDangerous>
			<turretGunDef>Catapult_Single</turretGunDef>
			<turretBurstCooldownTime>8</turretBurstCooldownTime>
		</building>
		<placeWorkers>
			<li>PlaceWorker_TurretTop</li>
			<li>PlaceWorker_ShowTurretRadius</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<comps>
		<li Class="CompProperties_Refuelable">
			<fuelLabel>Load Status</fuelLabel>
			<fuelGizmoLabel>Load</fuelGizmoLabel>
			<outOfFuelMessage>Cannot shoot: No Stone Loaded</outOfFuelMessage>
			<fuelFilter>
				<thingDefs>
					<li>Steel</li>
				</thingDefs>
			</fuelFilter>
			<fuelCapacity>1</fuelCapacity>
			<fuelMultiplier>1</fuelMultiplier>
			<initialFuelPercent>1</initialFuelPercent>
			<autoRefuelPercent>0.5</autoRefuelPercent>
			<showFuelGizmo>true</showFuelGizmo>
			<minimumFueledThreshold>1</minimumFueledThreshold>
			<factorByDifficulty>true</factorByDifficulty>
			<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			<fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
		</li>
		</comps>
		<researchPrerequisites>
			<li>Greatbow</li>
		</researchPrerequisites>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Projectile_Catapult_Single</defName>
		<label>catapult projectile single</label>
		<graphicData>
			<texPath>Things/Projectile/Stone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<damageDef>Catapult_Stone</damageDef>
			<damageAmountBase>75</damageAmountBase>
			<explosionRadius>1</explosionRadius>
			<armorPenetrationBase>0.5</armorPenetrationBase>
			<stoppingPower>2.5</stoppingPower>
			<speed>50</speed>
		</projectile>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Projectile_Catapult_Multi</defName>
		<label>catapult projectile multi</label>
		<graphicData>
			<texPath>Things/Projectile/Stone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<damageDef>Catapult_Stone</damageDef>
			<damageAmountBase>15</damageAmountBase>
			<explosionRadius>0.5</explosionRadius>
			<armorPenetrationBase>0.5</armorPenetrationBase>
			<stoppingPower>2.5</stoppingPower>
			<speed>50</speed>
		</projectile>
	</ThingDef>
	<ThingDef ParentName="BaseWeaponTurret">
		<defName>Catapult_Single</defName>
		<label>Catapult-Single</label>
		<description>A powerful bow made to be mounted on a ballista.</description>
		<graphicData>
			<texPath>Things/Building/Catapult/CatapultTop</texPath>
		</graphicData>
		<statBases>
			<AccuracyTouch>0.7</AccuracyTouch>
			<AccuracyShort>0.8</AccuracyShort>
			<AccuracyMedium>0.9</AccuracyMedium>
			<AccuracyLong>0.95</AccuracyLong>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<defaultProjectile>Projectile_Catapult_Single</defaultProjectile>
				<range>45.9</range>
				<forcedMissRadius>5</forcedMissRadius>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>Catapult_Release</soundCast>
				<consumeFuelPerShot>1</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="BaseWeaponTurret">
		<defName>Catapult_Multi</defName>
		<label>Catapult-Multi</label>
		<description>A powerful bow made to be mounted on a ballista.</description>
		<graphicData>
			<texPath>Things/Building/Catapult/CatapultTop</texPath>
		</graphicData>
		<statBases>
			<AccuracyTouch>0.7</AccuracyTouch>
			<AccuracyShort>0.6</AccuracyShort>
			<AccuracyMedium>0.5</AccuracyMedium>
			<AccuracyLong>0.4</AccuracyLong>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<defaultProjectile>Projectile_Catapult_Multi</defaultProjectile>
				<range>45.9</range>
				<forcedMissRadius>5</forcedMissRadius>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>Catapult_Release</soundCast>
				<consumeFuelPerShot>1</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
</Defs>